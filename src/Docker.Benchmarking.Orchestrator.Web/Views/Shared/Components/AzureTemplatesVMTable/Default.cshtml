@model IEnumerable<Docker.Benchmarking.Orchestrator.Web.ViewModels.AzureTemplateViewModel>

<p>
    <a asp-action="Add">Create New</a>
</p>

<div class="table-responsive">
    <table id="azure-vm-table" class="table table-striped table-sm" style="width:100%">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VMSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.vCPUs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Memory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiskSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Template)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParametersDefault)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VMSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.vCPUs)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Memory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiskSize)
                    </td>
                    <td>
                        <a href="@Url.Action("Template", new { id = item.Id })" data-featherlight-iframe-allowfullscreen="true"
                           data-featherlight-iframe-height="640" data-featherlight-iframe-width="480" data-featherlight="iframe">View</a>
                    </td>
                    <td>
                        <a href="@Url.Action("Parameters", new { id = item.Id })" data-featherlight-iframe-allowfullscreen="true"
                           data-featherlight-iframe-height="640" data-featherlight-iframe-width="480" data-featherlight="iframe">View</a>
                    </td>
                    <td>
                        @(item.Active ? "Active" : "Not Active")
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VMSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.vCPUs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Memory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiskSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Template)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParametersDefault)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>

            </tr>
        </tfoot>
    </table>
</div>