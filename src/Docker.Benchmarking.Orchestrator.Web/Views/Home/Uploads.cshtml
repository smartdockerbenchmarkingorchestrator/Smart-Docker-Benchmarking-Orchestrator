@using Microsoft.Extensions.FileProviders
@model IOrderedEnumerable<IFileInfo>
@{
    ViewData["Title"] = "Uploads";
}

<h1 class="h2">Uploads</h1><hr />

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-responsive-lg">
            <thead>
                <tr>
                    <th>
                        Exists
                    </th>
                    <th>
                        Length
                    </th>
                    <th>
                        Physical Path
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Last Modified
                    </th>
                    <th>
                        Is Directory
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    <tr>
                        <td>@file.Exists</td>
                        <td>@file.Length</td>
                        <td><a href="/uploads/@file.Name">@file.PhysicalPath</a></td>
                        <td>@file.Name</td>
                        <td>@file.LastModified.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@file.IsDirectory</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

