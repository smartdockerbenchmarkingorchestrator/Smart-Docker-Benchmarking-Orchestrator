@model Docker.Benchmarking.Orchestrator.Web.ViewModels.ManualBenchmarkResultsUploadViewModel

@{
    ViewData["Title"] = "Manual Benchmark Results Upload";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <form action="/api/Results/PostJmeterTest" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" asp-items="@Model.Items" class="form-control js-example-basic-single">
                    <option selected="selected" value="">Please select the benchmark experiment to add results for</option>
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" name="formFile" id="formFile" required accept=".csv" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

